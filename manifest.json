{
  "name": "Cloud Translation",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This is a cloud based on Baidu translate Plugin",
  "content_security_policy": "script-src 'self' https://fanyi-api.baidu.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons":{
		"16":"icon.png",
		"48":"icon.png"
	},
  "permissions": ["http://*/*"]
}